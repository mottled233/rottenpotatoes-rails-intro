-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
    -if @order_by=="title"
      %th.hilite= link_to "Movie Title",{ controller: :movies, action: :index, order_by: "title"}
      %th Rating
      %th= link_to "Release Date",{ controller: :movies, action: :index, order_by: "release_date"} 
      %th More Info
    -if @order_by=="release_date"
      %th= link_to "Movie Title",{ controller: :movies, action: :index, order_by: "title"}
      %th Rating
      %th.hilite= link_to "Release Date",{ controller: :movies, action: :index, order_by: "release_date"} 
      %th More Info
    -if @order_by==nil
      %th= link_to "Movie Title",{ controller: :movies, action: :index, order_by: "title"}
      %th Rating
      %th= link_to "Release Date",{ controller: :movies, action: :index, order_by: "release_date"} 
      %th More Info
        
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
